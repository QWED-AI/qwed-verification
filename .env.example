# QWED Environment Variables
# Copy this file to .env and fill in your values

# Active LLM Provider (azure_openai, anthropic, claude_opus)
ACTIVE_PROVIDER=azure_openai

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Anthropic Configuration (via Azure AI Foundry)
ANTHROPIC_ENDPOINT=https://your-resource.services.ai.azure.com/anthropic/
ANTHROPIC_API_KEY=your-api-key-here
ANTHROPIC_DEPLOYMENT=claude-sonnet-4-5

# Claude Opus Configuration
CLAUDE_OPUS_ENDPOINT=https://your-resource.services.ai.azure.com/anthropic/
CLAUDE_OPUS_API_KEY=your-api-key-here
CLAUDE_OPUS_DEPLOYMENT=claude-opus-4-5

# Database (optional - defaults to SQLite)
DATABASE_URL=sqlite:///./qwed.db
